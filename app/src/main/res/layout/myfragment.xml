<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".frag.MyFragment">
    <RelativeLayout
        android:background="@mipmap/my_bg"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="41dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="我的"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <ImageView

            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/xinxi"
            android:layout_width="22dp"
            android:layout_height="17dp"/>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/head_login"
            android:background="@drawable/wd"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.bw.movie.view.CircleImageView
                android:id="@+id/img_tx"
                android:src="@drawable/u"
                android:layout_marginTop="25dp"
                android:layout_width="46dp"
                android:layout_marginLeft="20dp"
                android:layout_height="46dp">
            </com.bw.movie.view.CircleImageView>
            <TextView
                android:textSize="16sp"
                android:layout_toRightOf="@+id/img_tx"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:text="登录"
                android:textColor="#141931"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/sf"
                android:layout_marginTop="45dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="8dp"
                android:layout_height="12dp"/>
        </RelativeLayout>
        <RelativeLayout

            android:layout_marginTop="10dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:background="#1c2243"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/wodedianyingpiao"
                android:layout_width="24dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="电影票"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/shape"
                android:layout_centerVertical="true"
                android:layout_width="7dp"
                android:layout_height="12dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:background="#1c2243"
            android:layout_height="250dp">
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_gz"
                    android:src="@mipmap/wodeguanzhu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="我的关注"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="160dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_yuyue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/wodeyuyue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="我的预约"
                    android:textColor="#ffffff" />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_jilu"
                    android:src="@mipmap/goupiaojilu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="购票记录"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout

                android:layout_marginLeft="18dp"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_kg"
                    android:src="@mipmap/kanguode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="看过的电影"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout

                android:layout_marginLeft="160dp"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_pl"
                    android:src="@mipmap/wodepinglun"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="我的评论"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout

                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_fk"
                    android:src="@mipmap/yijianfankui"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="意见反馈"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_marginTop="180dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_sz"
                    android:src="@mipmap/shezhi"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="设置"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffffff"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>


