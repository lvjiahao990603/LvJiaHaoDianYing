<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="#1c2243"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="20dp"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/times_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/times_image"
            android:layout_marginLeft="20dp"
            android:text="555"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:text="导演："
            android:id="@+id/daoyan"
            android:layout_below="@id/times_text1"
            android:layout_toRightOf="@id/times_image"
            android:layout_marginLeft="20dp"
            ></TextView>
        <TextView
            android:id="@+id/times_text2"
            android:layout_toRightOf="@id/daoyan"
            android:layout_width="150dp"
            android:maxLines="1"
            android:layout_height="17dp"
            android:layout_alignTop="@id/daoyan"
            android:textColor="#ffffff"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:text="主演："
            android:id="@+id/zhuyan"
            android:layout_below="@id/times_text2"
            android:layout_toRightOf="@id/times_image"
            android:layout_marginLeft="20dp"
            ></TextView>
        <TextView
            android:id="@+id/times_text3"
            android:layout_width="150dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxEms="6"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zhuyan"
            android:layout_alignTop="@id/zhuyan"
            android:textColor="#ffffff"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:text="评分："
            android:id="@+id/pingfen"
            android:layout_below="@id/times_text3"
            android:layout_toRightOf="@id/times_image"
            android:layout_marginLeft="20dp"
            ></TextView>
        <TextView
            android:id="@+id/times_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pingfen"
            android:layout_alignTop="@id/pingfen"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/times_image"
            android:layout_width="88dp"
            fresco:roundedCornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="108dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
</LinearLayout>
