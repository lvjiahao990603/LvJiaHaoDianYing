<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".view.ChongzhiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/jian"
            android:layout_marginLeft="28dp"
            android:id="@+id/chongzhi_fanhui"
            android:layout_marginTop="27dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置密码"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="120dp"
            ></TextView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/tiaomuyi"
        android:layout_width="400dp"
        android:layout_height="54dp"
        android:layout_below="@id/re_one"
        android:background="@drawable/mybianjiao"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="我的密码"
            android:textSize="14dp"
            android:textColor="#deffffff"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/wodemima"
            ></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入原密码"
            android:textColorHint="#fff"
            android:id="@+id/yuanmima"
            android:textSize="14dp"
            android:textColor="#fff"
            android:layout_marginLeft="200dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            ></EditText>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tiaomuer"
        android:layout_width="400dp"
        android:layout_height="54dp"
        android:layout_below="@id/re_one"
        android:background="@drawable/mybianjiao"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="设置新密码"
            android:textSize="14dp"
            android:id="@+id/shezhixinmima"
            android:textColor="#deffffff"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            ></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:textColorHint="#fff"
            android:id="@+id/xinmima"
            android:textSize="14dp"
            android:textColor="#fff"
            android:layout_marginLeft="200dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            ></EditText>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tiaomusan"
        android:layout_width="400dp"
        android:layout_height="54dp"
        android:layout_below="@id/re_one"
        android:background="@drawable/mybianjiao"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="确认新密码"
            android:textSize="14dp"
            android:id="@+id/querenxinmima"
            android:textColor="#deffffff"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            ></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:textColorHint="#fff"
            android:id="@+id/zaicishurumima"
            android:textSize="14dp"
            android:textColor="#fff"
            android:layout_marginLeft="200dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            ></EditText>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/bt_1"
        android:layout_marginTop="250dp"
        android:background="#E91E63"
        ></Button>
</LinearLayout>