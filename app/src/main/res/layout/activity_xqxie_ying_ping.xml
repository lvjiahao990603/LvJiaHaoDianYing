<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".view.XQXieYingPingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_yp_back"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/jian"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:layout_marginTop="37dp"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:text="写评价"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:background="#1c2243"
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:id="@+id/tv_yp_name"
                android:textSize="14dp"
                android:textColor="#fff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="悲伤逆流成河"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_pingfen"
            android:textSize="12dp"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:text="我的评分(0.0分)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:id="@+id/rb_yp_pingfen"
            android:layout_marginLeft="18dp"
            android:progressTint="#EC066C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="31dp"
                android:text="极差"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:text="较差"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="125dp"
                android:text="一般"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="178dp"
                android:text="不错"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_marginLeft="225dp"
                android:text="很好"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:textSize="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:text="写下您对影片的看法吧"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_yp_movie"
            android:background="#1c2243"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:gravity="top"
            android:textSize="12sp"
            android:maxLength="130"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_height="129dp"/>
        <Button
            android:id="@+id/bt_yp_push"
            android:layout_marginTop="20dp"
            android:text="提交"
            android:textColor="#fff"
            android:layout_marginBottom="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/but"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>
    </LinearLayout>
</ScrollView>